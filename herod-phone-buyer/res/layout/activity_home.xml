<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:herod="http://schemas.android.com/apk/res/org.herod.buyer.phone"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <org.herod.framework.widget.ActionBar
        android:id="@+id/actionbar"
        style="@style/ActionBar"
        herod:title="@string/app_name" />

    <ImageButton
        android:id="@+id/takeOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showTakeOutStores"
        android:src="@drawable/actionbar_back_indicator" />

    <ImageButton
        android:id="@+id/convenienceStoreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showConvenienceStores"
        android:src="@drawable/actionbar_back_indicator" />

</LinearLayout>